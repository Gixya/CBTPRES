// Exercício 1:/* Escreva um programa para gerar o invertido de um número com três algarismos



        Console.Write("Digite um número com três algarismos: ");
        int NUM = Convert.ToInt32(Console.ReadLine());


        if (NUM is >= 100 and <= 999)
        {
            ;
        }

        int centena = NUM / 100;
        int dezena = NUM % 100 / 10;
        int unidade = NUM % 10;
        int numeroinvertido = unidade * 100 + dezena * 10 + centena;
        Console.WriteLine("O número invertido é: " + numeroinvertido);
 


