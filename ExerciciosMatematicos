// Exercício 6: Cálculo Volume de um cilindro
Console.WriteLine("Cálculo do volume de um cilindro: ");

Console.WriteLine("Informe  o raio da base");
double RAIO = Convert.ToDouble(Console.ReadLine());

Console.WriteLine("Informe a altura: ");
double ALT = Convert.ToDouble(Console.ReadLine());

double VOLUME = (( RAIO * RAIO ) * ALT ) * 3.14 ;
Console.WriteLine("O volume do cilindro é " + VOLUME);
